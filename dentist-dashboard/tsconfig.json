{
  "compilerOptions": {
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es6",
    "lib": ["dom", "esnext"]
  },
  "include": ["src"]
}